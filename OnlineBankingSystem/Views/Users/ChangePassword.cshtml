@model OnlineBankingSystem.Models.User
@{
    var error = ViewData["error"] as string;
}

<h1>Update Password</h1>

<form asp-action="ChangePassword">
    <p class="text-danger">@error</p>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Current Password</label>
        <input type="password" name="currPass" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">New Password</label>
        <input type="password" name="newPass" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Re-Enter New Password</label>
        <input type="password" name="reenterNewPass" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" />
    </div>


</form>
