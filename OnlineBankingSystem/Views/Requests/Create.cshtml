@model OnlineBankingSystem.Models.Request

@{
    ViewData["Title"] = "Create";
    string error = ViewData["Error"] as string;
}

<h1>Create</h1>

<h4>New Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <p class="text-danger">@error</p>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="RequestMsg" class="control-label"></label>
                <input asp-for="RequestMsg" class="form-control" />
                <span asp-validation-for="RequestMsg" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    
    <a asp-action="Dashboard" asp-controller="Users" class="btn btn-primary">Back to DashBoard</a>
</div>

