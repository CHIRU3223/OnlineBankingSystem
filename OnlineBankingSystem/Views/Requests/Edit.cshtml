@model OnlineBankingSystem.Models.Request

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <select asp-for="Username" class="form-control" asp-items="ViewBag.Username"></select>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReqAccountNumber" class="control-label"></label>
                <input asp-for="ReqAccountNumber" class="form-control" />
                <span asp-validation-for="ReqAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestMsg" class="control-label"></label>
                <input asp-for="RequestMsg" class="form-control" />
                <span asp-validation-for="RequestMsg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestAction" class="control-label"></label>
                <input asp-for="RequestAction" class="form-control" />
                <span asp-validation-for="RequestAction" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Progress" /> @Html.DisplayNameFor(model => model.Progress)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RequestRemarks" class="control-label"></label>
                <input asp-for="RequestRemarks" class="form-control" />
                <span asp-validation-for="RequestRemarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
    <a asp-action="Dashboard" asp-controller="Users" class="btn btn-primary">Back to DashBoard</a>
</div>

